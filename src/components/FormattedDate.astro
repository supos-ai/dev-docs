---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date
      .toLocaleDateString("zh-cn", {
        year: "numeric",
        month: "numeric",
        day: "numeric",
      })
      .split("/")
      .map((n) => (+n < 10 ? `0${n}` : `${n}`))
      .join("-")
  }
</time>
